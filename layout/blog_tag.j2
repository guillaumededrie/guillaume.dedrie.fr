{% extends "base.j2" %}
{% from "macros.j2" import render_article_infos, render_tag with context %}

{% block title %}Tag {{ tag.name }}{% endblock title %}

{% block main -%}
<div class="row-fluid">
  <div class="span9">
    <ul class="pager">
      <li class="previous"><a href="{{ content_url(resource.meta.language + "/blog/") }}">&larr; {{ resource.meta.l10n.go_back_to_the_articles|e }}</a></li>
    </ul>

    <h2>{{ resource.meta.l10n.tagged_with|e}} <span data-icon="&#xf02b;"></span> {{ tag.name }}</h2>
    {% for article in site.content.walk_resources_tagged_with(tag)|reverse() -%}
    <h3><a href="{{ content_url(article.url) }}">{{ article.meta.title }}</a> <small>{{ render_article_infos(article) }}</small></h3>
    {%- endfor %}
  </div><!-- /.span9 -->
  <div class="span3">
    <h3><span data-icon="&#xf02c;"></span> Tags</h3>
    {% for tag, meta in site.tagger.tags -%}{{ render_tag(tag, (meta.resources|length)) }} {% endfor %}
  </div><!-- /.span3 -->  
</div><!-- /.row-fluid -->
{%- endblock %}
